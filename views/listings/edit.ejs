<%layout("/layout/boilerplate")%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT">
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%=listing.title%> "
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea type="text" class="form-control" name="listing[description]">
        <%=listing.description%> </textarea
        >
      </div>

      <div class="mb-3">
        <label for="image" class="form-lable">Image Link</label>
        <input
          type="text"
          name="listing[image]"
          value="<%=listing.image%>"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>

          <input
            type="number"
            name="listing[price]"
            value="<%=listing.price%>"
            class="form-control"
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%=listing.country%>"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          type="text"
          name="listing[location]"
          value="<%=listing.location%>"
          class="form-control"
        />
      </div>

      <button class="btn btn-dark edit-btn mt-3">Edit</button>
      <br><br>
    </form>
  </div>
</div>
